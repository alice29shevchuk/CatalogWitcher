<Window x:Class="CatalogWitcher.View.ListCharacters"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CatalogWitcher.View"
        mc:Ignorable="d"
        xmlns:myCtrls="clr-namespace:CatalogWitcher.Model.CustomControls"
        Title="ListCharacters" Height="400" Width="300">
    <Window.Resources>
        <DataTemplate x:Key="cardTemplate">
            <myCtrls:CharacterControl></myCtrls:CharacterControl>
        </DataTemplate>
        <ItemsPanelTemplate x:Key="cardPanelTemplate">
            <WrapPanel/>
        </ItemsPanelTemplate>
    </Window.Resources>
    <Grid>
        <ListBox ItemsSource="{Binding Characters}"
            ItemTemplate="{StaticResource cardTemplate}"
            ItemsPanel="{StaticResource cardPanelTemplate}">
        </ListBox>
    </Grid>
</Window>
