<Window x:Class="CatalogWitcher.View.AllInfoCharactersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CatalogWitcher.View"
        mc:Ignorable="d"
         xmlns:myCtrls="clr-namespace:CatalogWitcher.View.CustomControls"
        Title="AllInfoCharactersWindow" Height="600" Width="600">
    <Window.Resources>
        <DataTemplate x:Key="cardTemplate">
            <myCtrls:AllInfoCardControl></myCtrls:AllInfoCardControl>
        </DataTemplate>
        <ItemsPanelTemplate x:Key="cardPanelTemplate">
            <WrapPanel/>
        </ItemsPanelTemplate>
    </Window.Resources>
    <Grid>
        <ListBox Background="DimGray" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ItemsSource="{Binding Characters}" SelectedItem ="{Binding SelectedCharacters}"
            ItemTemplate="{StaticResource cardTemplate}"
            ItemsPanel="{StaticResource cardPanelTemplate}">
        </ListBox>
    </Grid>
</Window>
