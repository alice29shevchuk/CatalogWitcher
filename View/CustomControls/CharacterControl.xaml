<UserControl x:Class="CatalogWitcher.Model.CustomControls.CharacterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CatalogWitcher.Model.CustomControls" 
             xmlns:viewmodel="clr-namespace:CatalogWitcher.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:ChaptersViewModel}"
             xmlns:converter="clr-namespace:CatalogWitcher.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="200">
    <UserControl.Resources>
        <converter:ConverterURI x:Key="ImageConvertor" />
    </UserControl.Resources>
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="169*"></RowDefinition>
            <RowDefinition Height="31*"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Source="{Binding Img,Converter={StaticResource ImageConvertor}}" Width="190" Height="250" Grid.Row="0">
            </Image>
        <TextBlock FontSize="20" Foreground="Orange" TextAlignment="Center" Grid.Row="1" Text="{Binding Name}" FontFamily="Algerian"></TextBlock>
    </Grid>
</UserControl>
